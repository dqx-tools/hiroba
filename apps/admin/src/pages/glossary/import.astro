---
import Layout from "../../layouts/Layout.astro";
import GlossaryImport from "../../components/GlossaryImport";
---

<Layout title="Import Glossary">
	<GlossaryImport client:load />
</Layout>

<style is:global>
	.import-container {
		max-width: 600px;
	}

	.import-section {
		margin-bottom: 1.5rem;
	}

	.import-section h3 {
		margin-bottom: 0.5rem;
		font-size: 1.1rem;
	}

	.section-description {
		color: #666;
		margin-bottom: 1rem;
		font-size: 0.9rem;
	}

	.section-description a {
		color: #0066cc;
	}

	.divider {
		border: none;
		border-top: 1px solid #ddd;
		margin: 2rem 0;
	}

	.btn-primary {
		background: #0066cc;
		color: white;
		border: none;
		padding: 0.6rem 1.2rem;
		border-radius: 4px;
		cursor: pointer;
		font-size: 0.95rem;
	}

	.btn-primary:hover:not(:disabled) {
		background: #0055aa;
	}

	.btn-primary:disabled {
		opacity: 0.6;
		cursor: not-allowed;
	}
</style>
