---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content="Dragon Quest X news translated to English" />
		<title>{title} | DQX News</title>
		<link rel="stylesheet" href="/styles/global.css" />
	</head>
	<body>
		<header>
			<nav>
				<a href="/" class="logo">DQX News</a>
				<div class="nav-links">
					<a href="/category/news">News</a>
					<a href="/category/event">Events</a>
					<a href="/category/update">Updates</a>
					<a href="/category/maintenance">Maintenance</a>
				</div>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<p>
				Translated from <a href="https://hiroba.dqx.jp" target="_blank" rel="noopener">DQX Hiroba</a>
			</p>
		</footer>
	</body>
</html>
