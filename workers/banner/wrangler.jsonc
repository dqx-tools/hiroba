  "name": "dqx-banner-api",
  "main": "worker.py",
  "compatibility_date": "2025-11-02",
  "compatibility_flags": ["python_workers"],

  "observability": {
    "enabled": true
  },

  // Environment variables
  "vars": {
    "OPENAI_MODEL": "gpt-4o"
  },

